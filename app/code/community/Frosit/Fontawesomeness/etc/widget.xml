<?xml version="1.0"?>
<widgets>
    <frosit_fontawesomeness_fontawesome_icon type="frosit_fontawesomeness/Widget_FontAwesomeIcon" module="frosit_fontawesomeness">
        <name>Font Awesome Icon</name>
        <description type="desc">Refer to the <![CDATA[ <a href="http://fontawesome.io/examples/">examples</a>]]></description>
        <parameters>
            <icon>
                <label>Icon</label>
                <type>select</type>
                <source_model>frosit_fontawesomeness/system_config_source_fontAwesome_Icons</source_model>
                <visible>1</visible>
            </icon>
            <size>
                <label>Size</label>
                <type>select</type>
                <source_model>frosit_fontawesomeness/system_config_source_fontAwesome_Size</source_model>
                <visible>1</visible>
            </size>
            <fixed>
                <label>Fixed</label>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <visible>1</visible>
            </fixed>
            <spin>
                <label>Animate spin</label>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <visible>1</visible>
            </spin>
            <flip_rotate>
                <label>Flip / Rotate</label>
                <type>select</type>
                <source_model>frosit_fontawesomeness/system_config_source_fontAwesome_FlipRotate</source_model>
                <visible>1</visible>
            </flip_rotate>
            <custom>
                <label>Custom classes</label>
                <description>Comma seperated for multipleple classes</description>
                <type>textarea</type>
                <visible>1</visible>
            </custom>
        </parameters>
    </frosit_fontawesomeness_fontawesome_icon>

</widgets>