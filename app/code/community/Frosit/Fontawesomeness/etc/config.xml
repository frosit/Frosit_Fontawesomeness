<?xml version="1.0"?>
<config>

    <modules>
        <Frosit_Fontawesomeness>
            <version>1.1.0</version>
        </Frosit_Fontawesomeness>
    </modules>


    <global>
        <blocks>
            <frosit_fontawesomeness>
                <class>Frosit_Fontawesomeness_Block</class>
            </frosit_fontawesomeness>
        </blocks>
        <helpers>
            <frosit_fontawesomeness>
                <class>Frosit_Fontawesomeness_Helper</class>
            </frosit_fontawesomeness>
        </helpers>
        <models>
            <frosit_fontawesomeness>
                <class>Frosit_Fontawesomeness_Model</class>
            </frosit_fontawesomeness>
        </models>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <frosit_fontawesomeness>
                    <files>
                        <default>Frosit_Fontawesomeness.csv</default>
                    </files>
                </frosit_fontawesomeness>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <frosit_fontawesomeness>
                    <file>frosit_fontawesomeness.xml</file>
                </frosit_fontawesomeness>
            </updates>
        </layout>
    </frontend>

    <default>
        <fontawesomeness>
            <settings>
                <font_awesome>
                    <active>0</active>
                </font_awesome>
            </settings>
        </fontawesomeness>
    </default>
</config>