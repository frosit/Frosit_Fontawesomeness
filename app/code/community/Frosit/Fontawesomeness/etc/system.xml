<?xml version="1.0"?>
<config>

    <tabs>
        <frosit>
            <label>FROSIT</label>
            <sort_order>100</sort_order>
        </frosit>
    </tabs>

    <sections>
        <fontawesomeness module="frosit_fontawesomeness">
            <label>Font Awesomeness</label>
            <tab>frosit</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <font_awesome translate="label">
                    <label>Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label, comment">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <method translate="label, comment">
                            <label>Load by</label>
                            <frontend_type>select</frontend_type>
                            <source_model>frosit_fontawesomeness/system_config_source_sources</source_model>
                            <depends>
                                <active>1</active>
                            </depends>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </method>
                        <version translate="label">
                            <label>Version</label>
                            <frontend_type>select</frontend_type>
                            <source_model>frosit_fontawesomeness/system_config_source_fontAwesome_Version</source_model>
                            <depends>
                                <method>cdn</method>
                            </depends>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </version>
                    </fields>
                </font_awesome>
                <font_test>
                    <label>Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label, comment">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                    </fields>
                </font_test>
            </groups>
        </fontawesomeness>
    </sections>
</config>
