<?xml version="1.0"?>
<config>

    <tabs>
        <frosit>
            <label>FROSIT</label>
            <sort_order>100</sort_order>
        </frosit>
    </tabs>

    <sections>
        <fontawesomeness module="frosit_fontawesomeness">
            <label>Font Awesomeness</label>
            <tab>frosit</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cdn translate="label, comment">
                            <label>Use CDN</label>
                            <comment>Uses the Content Delivery Network</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cdn>
                        <local translate="label, comment">
                            <label>Use local</label>
                            <comment>Uses the local skin folder for serving the files</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </local>
                    </fields>
                </settings>
            </groups>
        </fontawesomeness>
    </sections>
</config>
